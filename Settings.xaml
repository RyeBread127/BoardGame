<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoardGame.Settings"
             Title="Settings">
    <VerticalStackLayout>
        <VerticalStackLayout BackgroundColor="LightGray" Spacing="15" Padding="15">
            <Grid>
                <Button x:Name="monopolyLogoButton" ImageSource="monopolylogo.png" Clicked="monopolyLogoButton_Clicked" WidthRequest="100" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" Scale="3" BackgroundColor="LightGray"/>
                <Button x:Name="optionsIcon" ImageSource="optionsicon.png" Clicked="optionsIcon_Clicked" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Scale="3" BackgroundColor="LightGray"/>
            </Grid>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>