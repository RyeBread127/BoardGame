<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoardGame.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout BackgroundColor="LightGray" Spacing="15" Padding="15">
                <Grid>
                    <Button x:Name="monopolyLogoButton" ImageSource="monopolylogo.png" Clicked="monopolyLogoButton_Clicked" WidthRequest="100" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" Scale="3" BackgroundColor="LightGray"/>
                    <Button x:Name="optionsIcon" ImageSource="optionsicon.png" Clicked="optionsIcon_Clicked" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Scale="3" BackgroundColor="LightGray"/>
                </Grid>
            </VerticalStackLayout>

            <Grid x:Name="gameBoard">
                <Image Source="board.png" WidthRequest="700" HeightRequest="700"/>
            </Grid>
            
   

            <VerticalStackLayout BackgroundColor="LightGray" Spacing="15" Padding="15">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="initializeTheGame" Text="Start game" HeightRequest="50" WidthRequest="100" BackgroundColor="#d42b2f"/>
                    <Button x:Name="restartGame" Text="Restart" IsEnabled="False" HeightRequest="50" WidthRequest="90" BackgroundColor="#d42b2f" TextColor="White"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
