<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoardGame.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">

            <Image Source="board.png" Scale="0.5"/>

            <Grid x:Name="gameBoard" BackgroundColor="white" HeightRequest="500" WidthRequest="500" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" RowSpacing="5" ColumnSpacing="5" Padding="5"/>

            <VerticalStackLayout BackgroundColor="LightGray" Spacing="15" Padding="15">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="initializeTheGame" Clicked="InitializeTheGame_Clicked" Text="Start game" HeightRequest="50" WidthRequest="100" BackgroundColor="Orange"/>
                    <Button x:Name="restartGame" Text="Restart" IsEnabled="False" HeightRequest="50" WidthRequest="90" BackgroundColor="Orange" TextColor="White"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
